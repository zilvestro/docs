{
  "$schema": "https://mintlify.com/docs.json",
  "theme": "mint",
  "name": "Affonso Docs",
  "colors": {
    "primary": "#881337",
    "light": "#881337",
    "dark": "#881337"
  },
  "favicon": "/favicon.ico",
  "openapi": "https://api.affonso.io/openapi.json",
  "api": {
    "baseUrl": "https://api.affonso.io",
    "auth": {
      "method": "bearer"
    },
    "mdx": {
      "auth": {
        "method": "bearer"
      }
    },
    "playground": {
      "display": "interactive"
    }
  },
  "navigation": {
    "tabs": [
      {
        "tab": "API Reference",
        "groups": [
          {
            "group": "Overview",
            "pages": [
              "api/introduction",
              "api/authentication",
              "api/rate-limits",
              "api/embedded-dashboard"
            ]
          },
          {
            "group": "Affiliates",
            "pages": [
              "api/endpoint/affiliates/list",
              "api/endpoint/affiliates/get",
              "api/endpoint/affiliates/create",
              "api/endpoint/affiliates/update",
              "api/endpoint/affiliates/delete"
            ]
          },
          {
            "group": "Referrals",
            "pages": [
              "api/endpoint/referrals/list",
              "api/endpoint/referrals/get",
              "api/endpoint/referrals/create",
              "api/endpoint/referrals/update",
              "api/endpoint/referrals/delete"
            ]
          },
          {
            "group": "Commissions",
            "pages": [
              "api/endpoint/commissions/list",
              "api/endpoint/commissions/get",
              "api/endpoint/commissions/create",
              "api/endpoint/commissions/update",
              "api/endpoint/commissions/delete"
            ]
          },
          {
            "group": "Payouts",
            "pages": [
              "api/endpoint/payouts/list",
              "api/endpoint/payouts/get",
              "api/endpoint/payouts/update"
            ]
          },
          {
            "group": "Embed",
            "pages": [
              "api/endpoint/embed/create-token"
            ]
          },
          {
            "group": "Coupons",
            "pages": [
              "api/endpoint/coupons/list",
              "api/endpoint/coupons/get",
              "api/endpoint/coupons/create",
              "api/endpoint/coupons/delete"
            ]
          }
        ]
      },
      {
        "tab": "MCP",
        "groups": [
          {
            "group": "Getting Started",
            "pages": [
              "mcp/introduction",
              "mcp/examples"
            ]
          },
          {
            "group": "Setup",
            "pages": [
              "mcp/setup/claude-desktop",
              "mcp/setup/cursor",
              "mcp/setup/other-clients"
            ]
          },
          {
            "group": "Tools",
            "pages": [
              "mcp/tools/affiliates",
              "mcp/tools/referrals",
              "mcp/tools/commissions",
              "mcp/tools/payouts"
            ]
          }
        ]
      },
      {
        "tab": "Webhooks",
        "groups": [
          {
            "group": "Overview",
            "pages": [
              "webhooks/introduction"
            ]
          },
          {
            "group": "Events",
            "pages": [
              "webhooks/events/affiliate",
              "webhooks/events/referral",
              "webhooks/events/transaction",
              "webhooks/events/payout",
              "webhooks/events/coupon"
            ]
          },
          {
            "group": "Usage & Examples",
            "pages": [
              "webhooks/setup",
              "webhooks/examples"
            ]
          },
          {
            "group": "Automation Tools",
            "pages": [
              "webhooks/zapier",
              "webhooks/make",
              "webhooks/n8n"
            ]
          }
        ]
      }
    ],
    "global": {
      "anchors": [
        {
          "anchor": "Home",
          "href": "https://affonso.io",
          "icon": "home"
        },
        {
          "anchor": "Blog",
          "href": "https://affonso.io/blog",
          "icon": "newspaper"
        },
        {
          "anchor": "Help Center",
          "href": "https://affonso.io/help",
          "icon": "book-open-cover"
        }
      ]
    }
  },
  "logo": {
    "light": "/logo/affonso_logo_small.png",
    "dark": "/logo/affonso_logo_small.png"
  },
  "navbar": {
    "links": [
      {
        "label": "Support",
        "href": "mailto:hello@affonso.io"
      }
    ],
    "primary": {
      "type": "button",
      "label": "Dashboard",
      "href": "https://affonso.io/app"
    }
  },
  "contextual": {
    "options": [
     "copy",
     "view",
     "chatgpt",
     "claude",
     "perplexity",
     "mcp",
     "cursor",
     "vscode"
   ]
  },
  "redirects": [
    {
      "source": "/",
      "destination": "/api/introduction"
    },
    {
      "source": "/api-reference/:path*",
      "destination": "/api/:path*"
    }
  ],
  "footer": {
    "socials": {
      "x": "https://x.com/useAffonso",
      "linkedin": "https://www.linkedin.com/company/affiliate-software"
    }
  }
}
